desktopdir 	 = $(datadir)/applications
desktop_in_files = biorhythm.desktop.in
desktop_DATA 	 = $(desktop_in_files:.desktop.in=.desktop)
@INTLTOOL_DESKTOP_RULE@

schemasdir	 = $(GCONF_SCHEMA_FILE_DIR)
schemas_in_files = biorhythm.schemas.in
schemas_DATA 	 = $(schemas_in_files:.schemas.in=.schemas)
@INTLTOOL_SCHEMAS_RULE@

man_MANS = biorhythm.1

pkgconfigdir = $(libdir)/pkgconfig
pkgconfig_DATA = biorhythm-@GEDIT_API_VERSION@.pc

biorhythm-@GEDIT_API_VERSION@.pc: gedit.pc
	cp biorhythm.pc gedit-@GEDIT_API_VERSION@.pc

bugreportdir = $(libexecdir)/biorhythm-2
bugreport_SCRIPTS = biorhythm-bugreport.sh

if GCONF_SCHEMAS_INSTALL
install-data-local:
	        if test -z "$(DESTDIR)" ; then \
	                for p in $(schemas_DATA) ; do \
	                        GCONF_CONFIG_SOURCE=$(GCONF_SCHEMA_CONFIG_SOURCE) $(GCONFTOOL) --makefile-install-rule $(top_builddir)/data/$$p ; \
	                done \
	        fi
else
install-data-local:
endif

EXTRA_DIST = 				\
	$(desktop_in_files)		\
	$(schemas_in_files)		\
	biorhythm.schemas.in.in		\
	$(man_MANS)			\
	biorhythm.pc.in			\
	biorhythm-bugreport.sh.in

CLEANFILES =	 			\
	$(desktop_DATA)			\
	$(schemas_DATA)			\
	$(pkgconfig_DATA)




-include $(top_srcdir)/git.mk
